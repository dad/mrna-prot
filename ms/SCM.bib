journal = {Journal of computational biology : a journal of computational molecular cell biology},
keywords = {Algorithms,Computational Biology,Computational Biology: methods,Computer Simulation,Humans,Linear Models,MCF-7 Cells,RNA, Messenger,RNA, Messenger: genetics,RNA, Messenger: metabolism,Sequence Analysis, RNA,Sequence Analysis, RNA: methods,Statistics as Topic,Transcriptome,Transcriptome: genetics},
month = mar,
number = {3},
pages = {167--87},
pmid = {23461570},
title = {{A robust method for transcript quantification with RNA-seq data.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3590898\&tool=pmcentrez\&rendertype=abstract},
volume = {20},
year = {2013}
}

